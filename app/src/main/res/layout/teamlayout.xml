<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Best Team"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/player1"
        android:layout_width="89dp"
        android:layout_height="93dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/player1"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp"
        app:layout_constraintEnd_toStartOf="@+id/player3"
        app:layout_constraintHorizontal_bias="0.198"
        app:layout_constraintStart_toEndOf="@+id/player2"
        app:layout_constraintTop_toBottomOf="@id/team" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/player2"
        android:layout_width="96dp"
        android:layout_height="93dp"
        android:src="@drawable/player2"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp"
        app:layout_constraintEnd_toStartOf="@id/player1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/player1"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/player3"
        android:layout_width="81dp"
        android:layout_height="89dp"
        android:src="@drawable/player3"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/player1"
        app:layout_constraintTop_toTopOf="@+id/player1"
        />

    <EditText
        android:id="@+id/name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:text="Messi\nForward"
        app:layout_constraintStart_toStartOf="@+id/player2"
        app:layout_constraintTop_toBottomOf="@+id/player2" />

    <EditText
        android:id="@+id/name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ronaldo\nForward"
        app:layout_constraintEnd_toStartOf="@+id/name3"
        app:layout_constraintHorizontal_bias="0.601"
        app:layout_constraintStart_toEndOf="@+id/name1"
        app:layout_constraintTop_toBottomOf="@+id/player1" />

    <EditText
        android:id="@+id/name3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Debruyne\nMidfielder"
        app:layout_constraintEnd_toEndOf="@+id/player3"
        app:layout_constraintTop_toBottomOf="@+id/player3" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/player4"
        android:layout_width="86dp"
        android:layout_height="95dp"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="68dp"
        android:layout_marginRight="52dp"
        android:src="@drawable/player4"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp"
        app:layout_constraintRight_toLeftOf="@+id/player5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player2" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/player5"
        android:layout_width="90dp"
        android:layout_height="95dp"
        android:layout_marginTop="68dp"
        android:src="@drawable/player5"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp"
        app:layout_constraintLeft_toRightOf="@id/player4"
        app:layout_constraintRight_toLeftOf="@id/player6"
        app:layout_constraintTop_toBottomOf="@id/player1" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/player6"
        android:layout_width="91dp"
        android:layout_height="97dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="72dp"
        android:layout_marginRight="36dp"
        android:src="@drawable/player6"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player3" />
    <EditText
        android:id="@+id/name4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ramos\nDefense"
        app:layout_constraintStart_toStartOf="@+id/player4"
        app:layout_constraintTop_toBottomOf="@+id/player4"/>
    <EditText
        android:id="@+id/name5"
        android:layout_width="72dp"
        android:layout_height="68dp"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:text="Degia\nKeeper"
        app:layout_constraintStart_toEndOf="@+id/name4"
        app:layout_constraintTop_toBottomOf="@+id/player5" />
    <EditText
        android:id="@+id/name6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DeLigt\nDefense"
        app:layout_constraintEnd_toEndOf="@+id/player6"
        app:layout_constraintTop_toBottomOf="@+id/player6" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="56dp"
        android:text="Mission"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/textview"
        app:layout_constraintEnd_toStartOf="@+id/name6"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toEndOf="@+id/name4"
        app:layout_constraintTop_toBottomOf="@+id/name5"
        app:layout_constraintVertical_bias="0.166" />

    <TextView
        android:id="@+id/textview"
        android:layout_width="362dp"
        android:layout_height="203dp"
        android:text="        They are the best players in the world and also the most successful footballers. Cristiano Ronaldo and Lionel Messi are above of all players in. But,all of them are in elite class and they only have to break the old records."
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text" />

</androidx.constraintlayout.widget.ConstraintLayout>